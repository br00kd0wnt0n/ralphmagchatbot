# Production Environment Configuration for Railway
# Copy these variables to Railway environment settings

# Content source mode
CONTENT_SOURCE=PDFS

# Directories for PDFs and covers (Railway paths)
PDFS_DIR=./data/pdfs
COVERS_DIR=./data/covers

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Embeddings provider
EMBEDDINGS_PROVIDER=OPENAI

# Chunking and retrieval settings
CHUNK_SIZE_CHARS=1500
CHUNK_OVERLAP_CHARS=200
RETRIEVAL_TOP_K=8

# CORS settings
CORS_ORIGIN=https://ralphmagchatbot-production.up.railway.app

# Admin credentials (set secure values)
ADMIN_USER=admin
ADMIN_PASS=secure-production-password

# Database settings - Railway will create this automatically
# DB_DIR is not needed - Railway uses ephemeral storage

# Security settings
DISABLE_CSP=false

# Rate limiting
NODE_ENV=production