PORT=3000
DB_DIR=./data
# For some hosts, WAL journal may not be supported on mounted volumes.
# Use DELETE if you see SQLite open/locking issues.
DB_JOURNAL=WAL

# Anthropic API (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Embeddings provider (choose one): OPENAI or VOYAGE
EMBEDDINGS_PROVIDER=OPENAI

# OpenAI embeddings (if EMBEDDINGS_PROVIDER=OPENAI)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Voyage embeddings (optional alternative)
VOYAGE_API_KEY=
VOYAGE_MODEL=voyage-3

# Google Drive / Docs API
# OAuth JSON file path (download from Google Cloud console)
GOOGLE_OAUTH_CREDENTIALS=./credentials/google-oauth.json
# Or provide JSON directly as env var (for Railway/cloud deployments)
GOOGLE_OAUTH_JSON=

# Token storage for OAuth (created on first auth)
GOOGLE_OAUTH_TOKEN=./credentials/google-token.json

# Comma-separated folder IDs in Drive that contain Issues
GOOGLE_DRIVE_FOLDER_IDS=

# Optional: restrict mime types (comma-separated)
INGEST_MIME_WHITELIST=application/vnd.google-apps.document,text/plain,text/markdown,application/pdf

# Chunking and retrieval defaults
CHUNK_SIZE_CHARS=1500
CHUNK_OVERLAP_CHARS=200
RETRIEVAL_TOP_K=8
# CORS allowlist (comma-separated origins)
CORS_ORIGIN=http://localhost:3000

# Admin auth for sync endpoints
ADMIN_USER=
ADMIN_PASS=

# Database directory (optional, defaults to ./data)
# On Railway with single volume: set to /app/credentials
DB_DIR=
